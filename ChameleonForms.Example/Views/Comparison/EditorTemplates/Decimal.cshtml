@using ChameleonForms.Example.Views.Comparison.EditorTemplates
@{ Layout = "~/Views/Comparison/EditorTemplates/_Layout.cshtml"; }
@{
    object formattedValue;
    if (ViewData.TemplateInfo.FormattedModelValue == ViewData.Model)
    {
        formattedValue = string.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:0.00}", ViewData.Model);
    }
    else
    {
        formattedValue = ViewData.TemplateInfo.FormattedModelValue;
    }
    var attrs = ViewData.GetFieldAttrs();
    attrs["class"] = "text-box single-line";
}
@Html.TextBox("", formattedValue, attrs)