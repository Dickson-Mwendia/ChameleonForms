<?xml version='1.0' encoding='UTF-8'?> 
<package>
  <metadata>
    <id>
       ChameleonForms.TwitterBootstrap3
    </id>
    <version>
       1.0.0.1
    </version>
    <authors>
       Robert Moore, Matthew Davies
    </authors>
    <description>
      This is a helper package for ChameleonForms which automatically sets up the Twitter Bootstrap template and includes the necessary dependencies.
    </description>
    <projectUrl>
      https://github.com/MRCollective/ChameleonForms
    </projectUrl>
    <licenseUrl>
      https://github.com/MRCollective/ChameleonForms/blob/master/LICENSE
    </licenseUrl>
    <iconUrl>
      https://raw.github.com/MRCollective/ChameleonForms/master/logo.png
    </iconUrl>
    <tags>
       asp.net, mvc, forms, html, template
    </tags>
    <language>
       en-US
    </language>
    <dependencies>
      <dependency id="ChameleonForms" version="0.1" />
      <dependency id="bootstrap" version="3.3.5" />
    </dependencies>
	    <contentFiles>
        <!-- Include Assets as Content -->
        <files include="*.*" buildAction="Content" />
    </contentFiles>
  </metadata>
  <files>
    <file src="ChameleonForms.Example\wwwroot\Scripts\jquery.validate.unobtrusive.twitterbootstrap.js" target="contentFiles\Scripts\jquery.validate.unobtrusive.twitterbootstrap.js" />
    <file src="ChameleonForms.Example\wwwroot\Content\chameleonforms-twitterbootstrap.css" target="contentFiles\Content\chameleonforms-twitterbootstrap.css" />
  </files>
</package>
